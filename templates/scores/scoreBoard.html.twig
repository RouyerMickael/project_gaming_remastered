{% extends 'base.html.twig' %}

{# {% block title %}Hello IndexController!{% endblock %} #}

{% block body %}

  <audio id="audio" class="audio" autoplay loop src="../assets/music/scoreBoard.mp3"></audio>

  <div class="container">

    <br/>
    
    <nav><a class="nav-link buttonPerso" href="{{ path('home') }}">Retour au menu principal</a></nav>

    <br/>
    <br/>
    <br/>

    <p>Vous jouez actuellement en tant que :</p>
    <p>
        <span class="showPseudo">
            {{ app.user }}
        </span>
    </p>


    <br/>
    <br/>
    <br/>

    <div>
      <label for="game">Sélectionner le jeu à consulter: </label>
      <select id="selectGame" name="game">
        {% for game in games %}
          <option value="{{game.id}}">{{game.name}}</option>
        {% endfor %}
      </select>  
      <br>
      <br>
      <button class="btn btn-secondary" onclick="getScores()">Lancer la recherche</button>
    </div>

    <br/>
    <br/>

    <div id="divTableScores"></div>

    
  </div>

  {% include "scores/_scriptsScoreBoard.html.twig" %}



{% endblock %}

